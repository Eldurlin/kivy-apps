<BusinessCardsScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            size_hint: 0.15, 0.15
            padding: 20, 20
            spacing: 20, 20
            Button:
                text: "Home Screen"
                on_press: root.return_home()
            Button:
                text: "Cofnij"
                on_press: root.cyfra()
        GridLayout:
            cols: 1
            padding: 20, 20
            spacing: 20, 20
            Label:
                text: "Wizytówki"
            TextInput:
                id: patterns_value
                hint_text: "Ilość wzorów"
            TextInput:
                id: quantity
                hint_text: "Ilość"
            GridLayout:
                cols: 2
                Label:
                    text: "Gramatura"
                    size_hint: 0.4, 0.4
                Spinner:
                    id: paper_weight
                    text: "350"
                    values: "350", "Ozdobny"
            GridLayout:
                cols: 2
                Label:
                    text: "Zadruk"
                    size_hint: 0.4, 0.4
                Spinner:
                    id: overprint
                    text: "4+0"
                    values: "4+0", "4+4"
            GridLayout:
                cols: 2
                Label:
                    text: "Foliowanie"
                    size_hint: 0.4, 0.4
                Spinner:
                    id: foil_cards
                    text: "Brak"
                    values: "Brak", "1+0", "1+1"
            TextInput:
                id: margin
                hint_text: "Marża"
            Button:
                text: "Oblicz"
            GridLayout:
                cols: 2
                Label:
                    text: "Koszt"
                    size_hint: 0.4, 0.4
                Label:
                    id: final_cost
                    text: ""
                Label:
                    text: "+ marża"
                    size_hint: 0.4, 0.4
                Label:
                    id: final_cost_margin
                    text: ""
                Label:
                    text: "+ VAT"
                    size_hint: 0.4, 0.4
                Label:
                    id: final_cost_margin_vat
                    text: ""


