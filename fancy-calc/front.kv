<HomeScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Button:
            text: "Solwent"
            on_press: root.solwent()
        Button:
            text: "Cyfra"
            on_press: root.cyfra()


<SolwentScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Button:
            text: "Roll-Up"
            on_press: root.roll_up()
        Button:
