            on_press: root.banner()
        Button:
            text: "Folia"
            on_press: root.foil()
        Button:
            text: "OWV"
            on_press: root.owv()
        Button:
            text: "Plakaty"
            on_press: root.paper()
        Button:
            text: "Cofnij"
            on_press: root.return_home()


<CyfraScreen>:
